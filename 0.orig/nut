FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inletOutlet
    {
        type            calculated;
        #include        "include/ABLConditions"
        value           uniform 0;
    }
    top
    {
        type            calculated;
        #include        "include/ABLConditions"
        value           uniform 0;
    }
    Buildings
    {
        type            nutkWallFunction;
        #include        "include/ABLConditions"
        value           uniform 0;
    }
    Car
    {
        type            nutkWallFunction;
        #include        "include/ABLConditions"
        value           uniform 0;
    }
    Terrain
    {
        type            nutkRoughWallFunction;
        #include        "include/ABLConditions"
        value           uniform 0;
        z0              $z0;
        Ks              uniform 0;
        Cs              uniform 0.5;
    }
}


